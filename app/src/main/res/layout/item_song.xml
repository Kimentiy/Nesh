<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8dp">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/img_btn_play_pause"
        android:layout_width="@dimen/player_play_pause_button_size"
        android:layout_height="@dimen/player_play_pause_button_size"
        android:background="@drawable/shape_play_pause_button"
        android:backgroundTint="@color/primary_dark"
        tools:src="@drawable/ic_pause_white" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="Eminem - Rap God" />
</LinearLayout>
